<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bgr_loaidt">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imganh"
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iphone15" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtmadt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Mã điện thoại: "
            android:textColor="#CF1717" />

        <TextView
            android:id="@+id/txtgiadt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Giá điện thoại: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txthoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Mã hóa đơn: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtsoluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Số lượng"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/txttongtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Tổng tiền"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:layout_marginLeft="42dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btndanhg"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="Viết bài đánh giá"
            android:textSize="13dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:layout_marginLeft="42dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/txtmachitiet"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="Bạn đã đánh giá"
            android:textSize="13dp" />


    </LinearLayout>

</LinearLayout>
